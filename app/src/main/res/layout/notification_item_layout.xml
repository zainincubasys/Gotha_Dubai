<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentPanel"
    android:background="@null">
    <TextView
        android:id="@+id/time_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6 Months ago"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#999999"
        android:gravity="right"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/main_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="After the mixing of the compound and the calendering, that is the spreading it in sheets, the great roll of rubber and cloth that is to be made into corrugated matting is sent to the pressman."
        android:textSize="16sp"/>

</LinearLayout>